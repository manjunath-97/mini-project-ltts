name: valgrind

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  cppcheck:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Install valgrnd
      run: sudo apt -y install valgrind
    - name: build code
      run: make
    - name: Run valgrind
      run: valgrind make run
